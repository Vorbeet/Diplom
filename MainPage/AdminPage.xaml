<Page x:Class="Diplomnaya.MainPage.AdminPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplomnaya.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Проверка и настройка">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="auto"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel VerticalAlignment="Top" Grid.Row="0" Margin="40">
            <Button Name="Base" Click="Base_Click" Content="Проверка целостности базы данных" Margin="10" HorizontalAlignment="Center" Width="550" Foreground="White" BorderBrush="White" Background="#67a3db" FontSize="28" FontWeight="DemiBold"/>
            <Button Name="App" Click="App_Click" Content="Проверка приложения на ошибки" Margin="10" HorizontalAlignment="Center" Width="550" Foreground="White" BorderBrush="White" Background="#67a3db" FontSize="28" FontWeight="DemiBold"/>
        </StackPanel>
        <Frame Name="FrameAdmin" NavigationUIVisibility="Hidden" Grid.Row="1" Height="300" VerticalAlignment="Bottom"/>
    </Grid>
</Page>
