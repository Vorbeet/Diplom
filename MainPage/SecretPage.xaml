<Page x:Class="Diplomnaya.MainPage.SecretPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Diplomnaya.MainPage"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="SecretPage">

    <Grid Background="#8ebfed">
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Button Name="Students" Content="Студенты" Click="Students_Click" HorizontalAlignment="Left" Width="200" Foreground="White" BorderBrush="White" Background="#67a3db" FontSize="28" FontWeight="DemiBold"/>
            <Button Content="Родители" Name="Parrents" Click="Parrents_Click" HorizontalAlignment="Left" Width="200" Foreground="White" BorderBrush="White" Background="#67a3db" FontSize="28" FontWeight="DemiBold"/>
        </StackPanel>
        <Frame Name="FrameStudents" NavigationUIVisibility="Hidden" Grid.Row="1"/>
    </Grid>
</Page>
